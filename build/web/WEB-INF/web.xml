<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" 
         xmlns="http://java.sun.com/xml/ns/javaee" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee   http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
         
    <servlet>
        <servlet-name>PersonnelServlet</servlet-name>
        <servlet-class>PersonnelServlet</servlet-class>
    </servlet>
     <servlet>
        <servlet-name>UserLoginServlet</servlet-name>
        <servlet-class>UserLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PersonnelServlet</servlet-name>
        <url-pattern>/addPersonnel</url-pattern>
    </servlet-mapping>
        <servlet-mapping>
        <servlet-name>PersonnelServlet</servlet-name>
        <url-pattern>/searchPersonnel</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PersonnelServlet</servlet-name>
        <url-pattern>/viewPersonnel</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PersonnelServlet</servlet-name>
        <url-pattern>/editPersonnel</url-pattern>
    </servlet-mapping>
      <servlet-mapping>
        <servlet-name>PersonnelServlet</servlet-name>
        <url-pattern>/updatePersonnel</url-pattern>
     </servlet-mapping> 
       <servlet>
        <servlet-name>UserLoginServlet</servlet-name>
        <servlet-class>UserLoginServlet</servlet-class>
    </servlet>       
 <servlet-mapping>
        <servlet-name>UserLoginServlet</servlet-name>
        <url-pattern>/addUserLogin</url-pattern>
    </servlet-mapping>     
     <servlet-mapping>
        <servlet-name>UserLoginServlet</servlet-name>
        <url-pattern>/viewUserLogin</url-pattern>
    </servlet-mapping>      
     <servlet-mapping>
        <servlet-name>UserLoginServlet</servlet-name>
        <url-pattern>/editUserLogin</url-pattern>
    </servlet-mapping>    
     <servlet-mapping>
        <servlet-name>UserLoginServlet</servlet-name>
        <url-pattern>/updateUserLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserLoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>   
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>    
      <resource-ref>
       <description>MySQL Test</description>
       <res-ref-name>jdbc/CIS407B</res-ref-name>
       <res-type>javax.sql.DataSource</res-type>
       <res-auth>Container</res-auth>
    </resource-ref>         
</web-app>

